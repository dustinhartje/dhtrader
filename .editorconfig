# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
# Note: max_line_length mirrors .flake8 max-line-length setting
# for editor-level enforcement during typing. See CODING_STANDARDS.md.
max_line_length = 79

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files (strict formatting)
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Bash/shell scripts
[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf
